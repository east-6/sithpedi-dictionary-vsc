{
  "name": "sithpedi-dictionary",
  "publisher": "Sithpedi",
  "icon": "icon128.png",
  "displayName": "Sithpedi Dictionary",
  "description": "Sithpedi Dictionary extension allows users to search for highlighted text in Sithpedi Dictionary.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sithpedi-dictionary.translate",
        "title": "Search Sithpedi Dictionary"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sithpedi-dictionary.translate",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/node-fetch": "^2.6.4",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "node-fetch": "^2.6.1"
  }
}
